using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace NEA_Graphing
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();

            this.Paint += Form1_Paint; //forgot to write this and wasted ages debugging code
            this.DoubleBuffered = true;
        }

        private void Form1_Load(object sender, EventArgs e)
        {

        }

        private void Form1_Paint(object sender, PaintEventArgs pE) //will contain 
        {
            Graphics g = pE.Graphics;

            //these borders for the graph space are likely temporary?
            int borderB = 100;
            int borderL = 100;
            int borderT = 100;
            int borderR = 100;

            Pen axes = new Pen(Color.Black, 10); //defines the pen that draws each axis

            int graphsWidth = this.ClientSize.Width - (borderL + borderR);
            int graphsHeight = this.ClientSize.Height - (borderT + borderB);

            g.DrawLine(axes, new Point(50, 50), new Point(0, 50));

            using (axes)
            {
                g.DrawLine(axes, borderL, (this.ClientSize.Height - borderB), (borderL + graphsWidth), (this.ClientSize.Height - borderB));
            } //should use pen 'axes' to draw the x-axis

            using (axes)
            {
                g.DrawLine(axes, borderL, borderT, borderL, borderB);
            } //should use pen 'axes' to draw the y-axis
        }
    
    }
}
